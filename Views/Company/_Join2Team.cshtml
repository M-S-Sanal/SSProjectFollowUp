@model SSProjectFollowUp.ViewModels.AdminVM
<form asp-action="Join2Team" enctype="multipart/form-data" style="margin:inherit" class="row g-3">
    <h3>Join a Team</h3>
    <div class="row">
        <div class="form-group">
            <label class="control-label">Company</label>
            <select asp-for="@Model.userApproval.ToCompId" asp-items="@Model.scompanies" class="form-select">
                <option disabled selected>-- Select Level-- </option>
            </select>
            <span asp-validation-for="@Model.userApproval.ToCompId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Referance mail</label>
            <div class="row">
                <div class="col-9">
                    <input asp-for="@Model.userApproval.ToUserMail" id="usbet" class="form-control" type="email" />
                </div>

                <div class="col-1 SearchUser">
                    <partial name="_ResultUser.cshtml"></partial>
                </div>
                <div class="col-1">
                    <button type="button" id="usbe" class="btn btn-outline-primary">search</button>
                </div>
            </div>
        </div>

            <div class="form-group">
                <label class="control-label">Introduction</label>
                <textarea asp-for="@Model.userApproval.Introduction" class="form-control"></textarea>
            </div>
            <div>
                <input name="submit" type="submit" value="Save" class="btn btn-primary" />
                <a href="/Company/Index" class="btn btn-danger">Cancel</a>
            </div>
        </div>
</form>