@model SSProjectFollowUp.Models.Company

<form asp-action="UpdateCompany">
    <div class="row">
        <div class="form-group">
            <input class="form-control" asp-for="CompanyName" hidden />
            <input class="form-control" asp-for="@Model.CompId" hidden />
            <label class="form-label" asp-for="@Model.CompanyName"></label>
            <input class="form-control" asp-for="@Model.CompanyName" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="@Model.Address">Address</label>
            <input class="form-control" asp-for="@Model.Address" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="@Model.Phone"> Phone</label>
            <input class="form-control" asp-for="@Model.Phone" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="@Model.StartDate"></label>
            <input class="form-control" asp-for="@Model.StartDate" type="date" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="@Model.LockDate"></label>
            <input readonly class="form-control" asp-for="@Model.LockDate" type="date" />
        </div>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</form>
