@model SSProjectFollowUp.ViewModels.ProjectVM
<div class="delUst2">
    @{
        if (Model != null)
        {
            @for (int i = 0; i < Model.projectFilesList.Count(); i++)
            {
                <div class="d-flex flex-row">
                    <a class="btn btn-sm" href="~/Documents/@Model.projectFilesList[i].FUrl@Model.projectFilesList[i].FExtention">@Model.projectFilesList[i].FName</a>
                    <input hidden asp-for="@Model.projectFilesList[i].PFId" />
                    <select asp-for="projectFilesList[i].PFLevel" asp-items="@Model.fileLevels" class="form-select">
                        <option disabled selected>-- Select Level-- </option>
                    </select>
                </div>
            }
        }
    }
</div>
